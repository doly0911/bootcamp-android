<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center|top"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/img_main"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:src="@drawable/android"/>

        <TextView
            android:id="@+id/txtTitleRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bienvenidos"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/title_main" />


        <EditText
            android:id="@+id/userEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_ingresarUsuario"
            android:inputType="text"
            android:backgroundTint="@color/purple_500"/>


        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/Input_ingresaContra"
            android:importantForAutofill="no"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_ingresar"
            style="@style/custom_button"
            android:layout_width="99dp"
            android:layout_height="33dp"
            android:text="@string/btn_main"
            android:backgroundTint="@color/buttons"
            android:layout_marginTop="20dp"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/msj_registrar_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_tienes_cuenta"
                android:textSize="13sp"
                android:textColor="@color/purple_700"/>

            <Button
                android:id="@+id/btn_registrarse"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:text="@string/registrarse"
                />

        </LinearLayout>
    </LinearLayout>
